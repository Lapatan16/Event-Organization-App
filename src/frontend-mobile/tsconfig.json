{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["react-native", "expo"],
    "moduleResolution": "bundler", // ⬅️ Ovo je KLJUČNO za expo-router@5
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
